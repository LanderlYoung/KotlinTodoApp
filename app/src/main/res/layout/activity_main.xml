<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="io.github.landerlyoung.awesometodo.MainActivity"
    >

    <TextView
        android:id="@+id/log"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/run_test"
        android:layout_alignParentTop="true"
        android:textSize="18sp"
        />


    <Button
        android:id="@+id/run_test"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/run_demo"
        android:text="Run Test"
        />

    <Button
        android:id="@+id/run_demo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="goto demo"
        />

</RelativeLayout>

